{
  "manifest_version": 2,

  "name": "Fix Twitter UI",
  "description": "Make Twitter Great Again!",
  "version": "1.0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "css": ["styles.css"]
    }
  ]
}