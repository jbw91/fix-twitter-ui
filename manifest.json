{
  "manifest_version": 2,

  "name": "Fix Twitter UI",
  "description": "Make Twitter Great Again!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "css": ["styles.css"]
    }
  ]
}